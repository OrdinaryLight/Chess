<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.chess.controller.SettingsController"
      alignment="CENTER"
      spacing="20"
      styleClass="root">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <Text text="Settings" styleClass="title"/>

    <VBox alignment="CENTER" spacing="10">
        <Text text="Theme:"/>
        <ComboBox fx:id="themeCombo" prefWidth="150"/>
    </VBox>

    <HBox alignment="CENTER" spacing="15">
        <Button fx:id="saveButton" text="Save" onAction="#onSave" styleClass="primary-button"/>
        <Button fx:id="backButton" text="Back" onAction="#onBack" styleClass="secondary-button"/>
    </HBox>

</VBox>
